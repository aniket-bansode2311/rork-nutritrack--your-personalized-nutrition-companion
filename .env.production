# Production Environment Configuration

# Copy this file to .env.production for production builds
# Make sure to update all values with your production credentials

# Environment
EXPO_PUBLIC_ENVIRONMENT=production

# Supabase Production Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# API Configuration
EXPO_PUBLIC_RORK_API_BASE_URL=https://toolkit.rork.com

# Security Settings
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=false
EXPO_PUBLIC_ENABLE_DEV_TOOLS=false
EXPO_PUBLIC_ENABLE_SOURCE_MAPS=false

# Analytics & Monitoring
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_CAMERA_FEATURES=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Performance Settings
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_CACHE_TIMEOUT=300000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3

# App Configuration
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_MIN_SUPPORTED_VERSION=1.0.0

# IMPORTANT SECURITY NOTES:
# 1. Never commit production secrets to version control
# 2. Use environment-specific configuration files
# 3. Rotate API keys regularly
# 4. Monitor for unauthorized access
# 5. Enable all security features in production